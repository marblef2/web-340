<!DOCTYPE html>
<html lang="en">
<% include header %>

<body>
<% include navbar %>

<div role="main" class="container" style="width: 30%;">
  <br /><br />

  <% if (employee.length) { %>
    <h2>Employee</h2>
    <br />
    <a class="" href="/new">New Employee</a>
    <br />

    <table class="table table-hover">
      <thead class="bg-secondary">
      <tr>
        <th class="text-white">Name</th>
        <th class="text-white">Functions</th>
      </tr>
      </thead>
      <tbody>
      <% employee.forEach(function (entry) { %>
        <tr>
          <td><%= entry.name %></td>
          <td style="width: 10%; text-align: center;">
            <a style="color: #555" href="/view/<%= entry.name %>">
              <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
            </a>
          </td>
        </tr>
      </tbody>
      <% }) %>
    </table>
  <% } else { %> No entries! <a href="/new">Add one!</a>
  <% } %>

  <br />
</div>
<% include scripts %>
</body>
</html>
